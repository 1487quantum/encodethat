<Label>:
    font_size: 30
    size_hint: 0.5,0.1
    halign: 'center'
    valign: 'middle'

#(0,0) botom left
<Button>:
    font_size: 40
    color: 0.1,0.5,0.6,1
    size_hint: 0.3,0.2        #Size 25% of screen size, width height

<FloatLayout>:
    canvas:
        Color:
            rgb: 1, 1, 1
    #Score
    Label:
        text: "Score: XXXX"
        pos_hint: {"x":0, "top":1}  #Start at screen center
    #Timer
    Label:
        text: "Timer: 120"
        pos_hint: {"x":0.5, "top":1}  #Start at screen center
    #Word to code
    Label:
        font_size: 70
        text: "apple"
        pos_hint: {"x":0.25, "y":0.5}  #Start at screen center
    #User code
    Label:
        text: "Morse ...---..."
        pos_hint: {"x":0.25, "y":0.25}  #Start at screen center x, 25% height

    Button:
        text:"•"
        pos_hint: {"x":0, "right":0.5}  #Right ends at 0.5 of screen

    Button:
        text: "—"
        pos_hint: {"x":0.5, "left":0} #Offset start to 0.5 of screen
